<script type="text/javascript">
	$(function() {
	    $.fn.dataGridOptions.formSubFun("#form",'/modules/system/notice/noticeEdit.html');
	});
</script>
<div class="popForm">
    <form id="form"  method="post">
	    <div class="formitm">
			<label class="lab">类型编码：</label>
			<div class="ipt">${notice.nid!}&nbsp;</div>
		</div>
		<div class="formitm">
		     <label class="lab">通知类型：</label>
			 <div class="ipt">
			 	<#if notice.noticeType??&&notice.noticeType==1>短信<#elseif notice.noticeType??&&notice.noticeType==2>邮件<#else>站内信</#if>
			 </div>
			 <input type="hidden" name="noticeType" value="${notice.noticeType}"/>
		</div>
		<div class="formitm">
		    <label class="lab">类型名称：</label>
		    <div class="ipt">
		    	<input type="text" name="name" class="easyui-validatebox" value="${notice.name!}" data-options="required: true"   maxlength="15"/>
				<b>*</b>
		    </div>
		</div>
		<#if notice.type != 2>
		<div class="formitm">
		     <label class="lab">通知类别：</label>
			 <div class="ipt">
				 <#if notice.canSwitch==1>
	             <input type="radio" name="type" value="1" <#if notice.type==1>checked="checked"</#if>/>系统通知&nbsp;&nbsp;
	             <input type="radio" name="type" value="2" <#if notice.type==2>checked="checked"</#if>/>用户通知
	             <#else>
	             <input type="radio" name="type" value="1" <#if notice.type==1>checked="checked"</#if>/>系统通知
	              </#if>
	              <b>*</b>
			</div>
		</div>
		<div class="formitm">
		     <label class="lab">是否启用发送：</label>
		     <div class="ipt">
			 	<input type="radio" name="send" value="1" <#if notice.send==1>checked="checked"</#if>/>启用&nbsp;&nbsp;
             	<input type="radio" name="send" value="0" <#if notice.send==0>checked="checked"</#if>/>不启用
             	<b>*</b>
             </div>
		</div>
		</#if>
		<div class="formitm">
			<label class="lab">备注：</label>
			<div class="ipt">
				<input type="text" name="remark" class="w400 easyui-validatebox" value="${notice.remark!}"  maxlength="120"/>
			</div>
		</div>
		<div class="formitm">
		    <label class="lab">标题模板：</label>
		    <div class="ipt">
		    	<input type="text" name="titleTemplet" class="w400 easyui-validatebox" value="${notice.titleTemplet!}" data-options="required: true" maxlength="120"/>
		    	<b>*</b>
		    </div>			
		</div>
		<div class="formitm">
			<label class="lab">内容模板：</label>
		    <div class="ipt">
		    	<textarea name="templet" rows="8" cols="80" class="w400 easyui-validatebox" data-options="required: true"  maxlength="800">${notice.templet!}</textarea><b>*</b>		    	
		    	<p>内容模板里的"[${r"${...}"}]"不要修改，否则影响通知、短信、站内信的正常使用！</p>
		    </div>
		</div>
		<input type="hidden" name="id" value="${notice.id}">
		<input type="hidden" name="nid" value="${notice.nid}">
		<input name="noticeEditToken" value="${noticeEditToken!}" type="hidden">
	</form>
</div>
