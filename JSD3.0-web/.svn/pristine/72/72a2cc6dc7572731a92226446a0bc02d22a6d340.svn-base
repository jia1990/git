<#include "header.htm"/>
<table cellspacing="0" cellpadding="10" width="100%" align="center" border="0">
	<tbody>
		<tr>
			<td class="bodyline">
             <!--当前位置-->    
	  <ul class="web_site clearfix">
            <li class="home_site"> <a href="#">网站首页</a> </li>
            <li> <a  href="${JForumContext.encodeURL("/forums/list")}">${I18n.getMessage("ForumListing.forumIndex")}</a> </li>
            <li>&gt;</li>
            <li>${I18n.getMessage("PrivateMessage.sentbox")}</li>
          </ul>
           <!--//当前位置-->
           
            <!--快捷链接-->
            <table cellspacing="20" cellpadding="3" width="100%" border="0" class="quick_link_wrap">
				<tr>
			
					<td width="8%" align="left" valign="middle" nowrap="nowrap">
					<a href="${JForumContext.encodeURL("/pm/reply/${pm.id}")}" class="reply_btn">回复消息</a>
					</td>
                    <td>
              <table width="30%" cellpadding="3" cellspacing="20" class="quick_a">
            <tr>
              <td valign="top" nowrap="nowrap" align="right"><a id="search"  href="${JForumContext.encodeURL("/search/filters")}"><img src="${contextPath}/themes/bbs/templates/${templateName}/images/search.png" alt="${I18n.getMessage("ForumBase.search")}"/></a></td>
              <td valign="top" nowrap="nowrap" align="right"><a id="latest"  href="${JForumContext.encodeURL("/recentTopics/list")}"><img src="${contextPath}/themes/bbs/templates/${templateName}/images/new_topic.png" alt="${I18n.getMessage("ForumBase.recentTopics")}" /></a></td>
              <td valign="top" nowrap="nowrap" align="right"><a id="hottest"  href="${JForumContext.encodeURL("/hottestTopics/list")}"><img src="${contextPath}/themes/bbs/templates/${templateName}/images/hot_topic.png" alt="${I18n.getMessage("ForumBase.hottestTopics")}" /></a></td>
            </tr>
          </table>
          </td>
          </tr>
          </table>
         <!--//快捷链接-->
         
            <table cellspacing="0" cellpadding="0" width="100%" align="center" border="0">
                  <tbody>
                    <tr>
                      <td valign="top" align="left" width="100%">
                     <a href="${JForumContext.encodeURL("/pm/inbox")}"><img src="${contextPath}/themes/bbs/templates/${templateName}/images/inbox_not.jpg" alt="[Inbox]" /></a><a href="${JForumContext.encodeURL("/pm/sentbox")}"><img src="${contextPath}/themes/bbs/templates/${templateName}/images/outbox_not.jpg" alt="[Sentbox]" /></a>
                      </td>
                    </tr>
                  </tbody>
                </table>
                
				<br clear="all" />
				<form action="${JForumContext.encodeURL("/jforum")}" method="post">
				<input type="hidden" name="module" value="${moduleName}" />
				<input type="hidden" name="action" value="delete" />
					
					<table class="message_content" cellspacing="1" cellpadding="4" width="100%" border="0">
						<tbody>
							<tr>
								<th class="message_content_head" nowrap="nowrap" colspan="2">信息内容</th>
							</tr>
							<tr>
								<td class="row2" align="right" width="30%"><span class="genmed">${I18n.getMessage("PrivateMessage.from")}：</span></td>
								<td class="row2" ><span class="genmed"><a class="nav" href="${JForumContext.encodeURL("/user/profile/${pm.fromUser.id}")}">${pm.fromUser.username}</a></span></td>
							</tr>
							<tr>
								<td class="row2" align="right" width="30%"><span class="genmed">${I18n.getMessage("PrivateMessage.to")}：</span></td>
								<td class="row2" ><span class="genmed"><a class="nav" href="${JForumContext.encodeURL("/user/profile/${pm.toUser.id}")}">${pm.toUser.username}</a></span></td>
							</tr>
							<tr>
								<td class="row2" align="right" width="30%"><span class="genmed">${I18n.getMessage("PrivateMessage.date")}：</span></td>
								<td class="row2" ><span class="genmed">${pm.formatedDate}</span></td>
							</tr>
							<tr>
								<td class="row2" align="right" width="30%"><span class="genmed">${I18n.getMessage("PrivateMessage.subject")}：</span></td>
								<td class="row2"><span class="genmed">${pm.post.subject?html}</span></td>
								
							</tr>
							<tr>
                            	<td class="row2" width="30%" align="right" >
                                信息内容：
                                </td>
								<td class="row2" valign="top" >
                                <span class="genmed">
									${pm.post.text}
									<#if (pm.fromUser.attachSignatureEnabled && pm.fromUser.signature?exists && pm.post.isSignatureEnabled())>
									${pm.fromUser.signature}
									</#if>
								</span>
								</td>
							</tr>
							
							<tr>
								<td align="right" colspan="3" height="28">
									<input type="hidden" value="${pm.id}" name="id" />
									<input class="liteoption" type="submit" value="${I18n.getMessage("PrivateMessage.removeMessage")}" name="delete" />
                                    <a href="${JForumContext.encodeURL("/pm/quote/${pm.id}")}" class="icon_quote">引用</a>
								</td>
							</tr>
						</tbody>
					</table>
					
				</form>
				<div align="center"></div>
		  </td>
		</tr>
	</tbody>
</table>
<#include "bottom.htm"/>
